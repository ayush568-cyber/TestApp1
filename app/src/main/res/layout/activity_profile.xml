<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">
    <ImageView
        android:id="@+id/pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile"
        android:layout_marginLeft="100dp"/>
    <TextView
        android:id="@+id/received_value_id1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_below="@+id/pro"
        android:layout_marginLeft="40dp" />
    <TextView
        android:id="@+id/received_value_id2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_below="@+id/received_value_id1"
        android:layout_marginLeft="40dp"/>
    <TextView
        android:id="@+id/received_value_id3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_below="@+id/received_value_id2"
        android:layout_marginLeft="40dp"/>
    <TextView
        android:id="@+id/received_value_id4"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_below="@+id/received_value_id3"
        android:layout_marginLeft="40dp"/>

</RelativeLayout>